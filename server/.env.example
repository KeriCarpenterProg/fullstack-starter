# Example environment file for development and CI/CD
# Copy this to .env and fill in your actual values

# Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT Secret (generate a secure random string)
JWT_SECRET="replace-with-a-long-random-string"

# Port (optional, defaults to 4000)
PORT=4000

# Frontend URL (for CORS - production deployment URL)
FRONTEND_URL="https://fullstack-starter-rose.vercel.app"

# ML service base URL (for category predictions)
ML_SERVICE_URL="http://localhost:5002"

# ML service API key (shared secret for authentication)
ML_API_KEY="replace-with-a-secure-random-key"
